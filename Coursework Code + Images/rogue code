
        elif self.health<=0:
            win.blit(rogue_dead[self.dead_count // 3], (self.x, self.y))
            self.dead_count += 1
        else:
            win.blit(rogue_idle[self.idle_count//6], (self.x,self.y))
            self.idle_count +=1

